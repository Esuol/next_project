{
  "compilerOptions": {
    "composite": false,
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "declaration": true,
    "noImplicitAny": true,
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "outDir": "./lib"
  },
  "include": ["src"],
  "ts-node": {
    "compilerOptions": {
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "esm": true
  }
}
